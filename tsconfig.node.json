{
	"extends": "@tsconfig/node22/tsconfig.json",
	"include": [
		"vite.config.*",
		"vitest.config.*",
		"cypress.config.*",
		"nightwatch.conf.*",
		"playwright.config.*",
		"eslint.config.*",
		"docs/.vitepress/config.ts",
		"docs/.vitepress/theme/**/*.ts"
	],
	"exclude": ["docs/**/*.md", "**/*.md"],
	"compilerOptions": {
		"noEmit": true,
		"tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",

		"module": "ESNext",
		"moduleResolution": "Bundler",
		"types": ["node"]
	}
}
